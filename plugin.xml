<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="minew-beacon-plus"
    version="1.0.0">
    <name>Minew Beacon Plus</name>
    <description></description>
    <license>MIT</license>
    <keywords></keywords>
    <!-- <repo>https://github.com/driftyco/cordova-plugin-template.git</repo> -->
    <!-- <issue>https://github.com/driftyco/cordova-plugin-template/issues</issue> -->

    <!-- android -->
    <platform name="android">
      <js-module src="www/plugin.js" name="plugin">
        <runs/>

        <!-- This is the window variable name you want, like window.MyCordovaPlugin -->
        <clobbers target="MinewBeaconPlus" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="MinewBeaconPlus">
          <param name="android-package" value="com.example.MinewBeaconPlus" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/com/example/MinewBeaconPlus.java" target-dir="src/com/example/" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <js-module src="www/plugin.js" name="plugin">
            <runs/>
            <clobbers target="MinewBeaconPlus" />
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="MinewBeaconPlus">
                <param name="ios-package" value="MinewBeaconPlus" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/MinewBeaconPlus.h" />
        <source-file src="src/ios/MinewBeaconPlus.m" />
    </platform>
</plugin>
